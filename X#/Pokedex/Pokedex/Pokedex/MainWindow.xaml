<Window x:Class="Pokedex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        Title="Pokémon" Height="400" Width="300">

    <Grid>

        <!-- Pokémon list -->
        <Grid Name="PokemonListPanel"  Background="#3B4CCA"  >
            <Grid.RowDefinitions>
                <!-- title -->
                <RowDefinition Height="30"/>
                <!-- list -->
                <RowDefinition Height="*"/>
                <!-- Navigation-->
                <RowDefinition Height="25"/>

            </Grid.RowDefinitions>
            <TextBlock Text="Select Your Pokémon!" Grid.Row="0"  Foreground="yellow" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"/>
            <ListBox Name="PokemonNameList"  Grid.Row="1" AlternationCount="1000" DisplayMemberPath="DisplayName" MouseDoubleClick="PokemonNameList_MouseDoubleClick" Foreground="Black"  Background="#3B4CCA" >
            </ListBox>

            <Grid Name="NavigationButtons"  Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <!-- Preivous -->
                    <ColumnDefinition Width="*"/>
                    <!-- Next -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Name="PreviousButton" IsEnabled="{Binding hasPrevious}"  Grid.Column="0" Content="&lt;"  HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" Margin="0,0,0,0" Click="GetPreviousPageButton_Click"/>

                <Button Name="NextButton" Grid.Column="1" Content="&gt;" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="GetNextPageButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding hasNext}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden"/>
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Name="MoreButton" Grid.Column="1" Content="Get More" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="GetMoreButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding canGetMore}" Value="true">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>

        <!-- Details panel -->
        <Grid Name="DetailsPanel" Visibility="Collapsed" Background="Red">
            <Grid.RowDefinitions>
                <!-- back -->
                <RowDefinition Height="20"/>
                <!-- sprite & name -->
                <RowDefinition Height="*"/>
                <!-- stats -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Name="BackButton" Background="#3B4CCA" Grid.Row="0" Content="&lt;&lt; Pokemon" Width="100" Height="20" HorizontalAlignment="Left" Margin="0,0,0,0" Click="BackButton_Click"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <!-- Sprite -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Name -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Name="Sprite" Grid.Column="0"  Width="120" Height="120" Stretch="Uniform" HorizontalAlignment="Left"  VerticalAlignment="Top" />
                <StackPanel Grid.Column="1" Margin="5">
                    <TextBlock Name="PokemonName" FontWeight="Bold" FontSize="20" Margin="0,2,0,2" HorizontalAlignment="Left" />
                    <TextBlock Name="pHeight" FontWeight="Bold" FontSize="15" Margin="0,2,0,2" HorizontalAlignment="Left" />
                    <TextBlock Name="pWeight" FontWeight="Bold" FontSize="15" Margin="0,2,0,2" HorizontalAlignment="Left" />
                </StackPanel>
            </Grid>
            <Border Grid.Row="3" BorderBrush="Black" BorderThickness="2" CornerRadius="5" Padding="5" Margin="5">
                <StackPanel  Name="StatsPanel" Orientation="Vertical"  />
            </Border>
        </Grid>

        <!-- Loading bar -->
        <Grid Name="LoadingBar" Background="#3B4CCA" Visibility="Collapsed" >
            <ProgressBar Width="100" Height="20" IsIndeterminate="True"/>
            <TextBlock Text="Loading..." Foreground="Red" FontSize="20" FontWeight="Bold"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
